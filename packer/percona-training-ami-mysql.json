{
	"builders": [{
		"type": "amazon-ebs",
		"region": "us-west-2",
		"ami_regions": ["us-west-1", "us-west-2", "us-east-1", "eu-west-1", "eu-central-1"],
		"source_ami": "ami-0a248ce88bcc7bd23",
		"vpc_id": "vpc-0b7e5bd4e7eef4806",
		"subnet_id": "subnet-0d627f49a25875a1a",
		"instance_type": "t3a.large",
		"ssh_username": "centos",
		"ssh_pty": "true",
		"ami_name": "Percona-Training-{{isotime \"20060102\"}}-AMI",
		"associate_public_ip_address": "true",
		"tags": {
			"Name": "Percona-Training-{{isotime \"20060102\"}}-AMI"
		},
		"ami_block_device_mappings": [{
			"device_name": "/dev/sda1",
			"delete_on_termination": true,
			"volume_size": 100,
			"volume_type": "gp2"
		}],
		"launch_block_device_mappings": [{
			"device_name": "/dev/sda1",
			"delete_on_termination": true,
			"volume_size": 100,
			"volume_type": "gp2"
		}]
	}],
	"provisioners": [
		{
			"type": "file",
			"source": "my.cnf.txt",
			"destination": "/tmp/my.cnf"
		},
		{
			"type": "file",
			"source": "etc_ssl_mysql/",
			"destination": "/tmp"
		},
		{
			"type": "file",
			"source": "sysbench/",
			"destination": "/tmp"
		},
		{
			"type": "shell",
			"script": "base.sh",
			"execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'"
		},
		{
			"type": "shell",
			"script": "percona-training-setup-mysql.sh",
			"execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'"
		}
	]
}
